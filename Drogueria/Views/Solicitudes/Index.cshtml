@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Solicitudes/Solicitudes.cshtml";
}

<html>
<head>
    <!--Custom styles-->
    <link rel="stylesheet" type="text/css" href="~/RecursosExternos/semantic.css">
    <link rel="stylesheet" type="text/css" href="~/RecursosExternos/semantic.min.css">
    <title>Crear solicitud</title>

    <link href="~/RecursosExternos/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="~/RecursosExternos/bootstrap.min.js"></script>
    <script src="~/RecursosExternos/jquery.min.js"></script>

    <!-- Semantic UI CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.8/semantic.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css">
    <script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.js"></script>

    <style>
        body {
            width: 100%;
            height: 100%;
            background-image: url('/Images/Wall1.jpg');
            background-position: center;
            background-size: 100% 100%;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }
    </style>

    <script>
        var urlObtenerProductos = '@Url.Action("ObtenerProductos", "Solicitudes")';
        var urlObtenerPrioridad = '@Url.Action("ObtenerPrioridad", "Solicitudes")';
        var urlObtenerEstado = '@Url.Action("ObtenerEstado", "Solicitudes")';
        var urlAgregarProducto = '@Url.Action("AgregarProducto", "Solicitudes")';
        var urlInsertarSolicitud = '@Url.Action("InsertarSolicitud", "Solicitudes")';


        $(document).ready(function () {

            $('.ui.selection.dropdown').dropdown();
            $('.ui.menu .ui.dropdown').dropdown({
                on: 'hover'
            });
        });
    </script>
    <script src="~/Scripts/Script_Solicitud.js"></script>

</head>
<body>
    <br />
    <!-- Modal Conductor (bootstrap) -->
    <div id="modalSolicitud" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="margin-left: auto; margin-right: auto; width: 50%; opacity:1">
        <div class="modal-xl" role="document">
            <div class="modal-content" style="width:100%">
                <div class="modal-header">
                    <h4 class="modal-title" id="exampleModalLabel">Ingreso de solicitudes</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="image content">
                        <div class="ui info message">
                            <i class="close icon"></i>
                            <div class="header">
                                Atención al llenar el formulario!
                            </div>
                            La data de este formulario debe ser llenada con la mayor exactitud posible
                            @*<br />
                                <div id="msjExito" class="ui hidden success message">
                                    <i class="close icon"></i>
                                    <div class="header">El conductor ha sigo guardada con éxito. </div>
                                    <p>el conductor está disponible para ser utilizado</p>
                                </div>*@
                            <div id="msjAdvertencia" class="ui icon hidden warning message">
                                <i class="exclamation triangle icon"></i>
                                <div class="content">
                                    <div class="header">
                                        Esta conductor ya existe!!!
                                    </div>
                                    <p>el RUT que está digitando ya está registrado.</p>
                                </div>
                            </div>
                            <div class="ui divider"></div>
                            <div class="ui form">

                                <div class="two fields">
                                    <div class="field">
                                        <label>Fecha Solicitud</label>
                                        <input id="txtFechaIngreso" placeholder=" " type="text" value=@Session["FechaActual"] readonly>
                                    </div>
                                    <div class="field">
                                        <label>Prioridad</label>
                                        <select id="cmbPrioridad" name="cmbPrioridad" class="ui fluid search selection dropdown">
                                        </select>
                                    </div>
                                    <div class="field">
                                        <label>Estado</label>
                                        <select id="cmbEstado" name="cmbEstado" class="ui fluid search selection dropdown">
                                        </select>
                                    </div>
                                </div>
                                <div class="field">
                                    <label>Observación</label>
                                    <textarea id="txtObservacion" rows="4" placeholder="Observación"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="divProgramacion">
                        <h4 class="ui top attached block header" style="margin-left:auto; margin-right:auto; width:100%">
                            Detalle artículos
                        </h4>
                        <div class="ui bottom attached segment" style="margin-left:auto; margin-right:auto; width:100%">
                            <div id="divMensajeProgramacionNO" class="ui icon info message">
                                <i id="divIcono" class="info icon"></i>
                                <div class="content">
                                    <div id="divTituloMsj" class="header">
                                        Atención!
                                    </div>
                                    <p id="divDetalleMsj">Debe agregar al menos un producto para poder guardar la solicitud.</p>
                                </div>
                            </div>
                            <form class="ui form">
                                <table style="width:100%">
                                    <tr>
                                        <td style="width:40%">
                                            <div id="divcmbArticulo" class="field">
                                                <label>Articulo</label>
                                                <select id="cmbArticulo" name="cmbArticulo" class="ui search selection dropdown">
                                                </select>
                                            </div>
                                        </td>
                                        <td style="width:10%">
                                            <div class="field">
                                                <label>Cantidad</label>
                                                <input id="txtCantidad" type="number" />
                                            </div>

                                        </td>
                                        <td style="width:30%">
                                            <div class="field">
                                                <label>Observación</label>
                                                <input id="txtObservacionArticulo" type="text" />
                                            </div>
                                        </td>
                                        <td style="width:10%">
                                            <div class="field">
                                                <label style="opacity:0">" "</label>
                                                <div class="ui right blue labeled icon button" onclick="AgregarProducto();">Agregar<i class="thumbs up icon"></i></div>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </form>



                        </div>

                        <table id="grdArticulos" class="ui inverted table table-striped table-bordered">
                            <thead>
                                <tr>

                                    <th style="width:10%">Op</th>
                                    <th style="width:50%">Artículo</th>
                                    <th style="width:10%">Cantidad</th>
                                    <th style="width:30%">Observacion</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                            @*<tfoot class="full-width">
                                    <tr>
                                        <th></th>
                                        <th colspan="12">

                                            <div id="btnAgregarConductor" class="ui blue right labeled icon button" data-toggle="modal" data-target="#modalSolicitud">
                                                Importar desde excel
                                                <i class="plus icon"></i>
                                            </div>


                                        </th>
                                    </tr>
                                </tfoot>*@
                        </table>
                    </div>

                    <div class="actions">
                        <div id="DivMessajeErrorGeneral" class="ui hidden error message" style="margin-left:auto; margin-right:auto; width:100%">
                            <i class="close icon"></i>
                            <div class="header">
                                Se han encontrado algunos problemas, revíselos...
                            </div>
                            <ul id="listMessajeError" class="list"></ul>
                        </div>
                    </div>
                </div>
                <br />
                <div id="msjError" class="ui icon error hidden message">
                    <i class="check icon"></i>
                    <div class="content">
                        <div class="header">
                            Error!!!
                        </div>
                        <p>Error al intentar crear la solicitud.</p>
                    </div>
                </div>
                <div id="msjExito" class="ui icon success hidden message">
                    <i class="check icon"></i>
                    <div class="content">
                        <div class="header">
                            Éxito!!!
                        </div>
                        <p>La solicitud fue guardada con éxito.</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <div id="btnSalir" class="ui right labeled icon button" onclick="window.location.replace('/Home')">Salir<i class="cancel icon"></i></div>
                    <div id="btnLimpiar" class="ui right labeled icon button" onclick="LimpiarConductor();">Limpiar<i class="trash icon"></i></div>
                    <div id="btnGuardar" class="ui positive right labeled icon button" onclick="GuardarSolicitud();">
                        Guardar
                        <i class="checkmark icon"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>



